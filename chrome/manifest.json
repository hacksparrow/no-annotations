{
  "manifest_version": 2,

  "name": "No Annotations",
  "short_name": "NoAnnotation",
  "description": "Disable annotations on YouTube",
  "version": "0.0.1",

  "author": "Hage Yaapa",
  "homepage_url": "https://github.com/hacksparrow/no-annotations",

  "permissions": [
    "https://www.youtube.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "css": ["style.css"],
      "run_at": "document_start"
    }
  ],

"icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }

}
